# Configure logging: (needs to be done before importing our modules)
from granola.log import setup_logging
log_conf_locations = ["~/.granola/logging.conf", "./logging.conf"]
setup_logging(log_conf_locations)
from logging import getLogger
log = getLogger("granola")

import commands
import os
import os.path

from sqlalchemy import create_engine, MetaData, Table, Column, Integer, \
        String, ForeignKey
from sqlalchemy.orm import mapper, relation

VERSION = "0.1"
DATA_DIR = os.path.expanduser("~/.granola")
SQLITE_DB = "%s/granola.db" % DATA_DIR

def is_first_run():
    """ 
    Return True if this is the first time the user has run this program. 
    """
    if (not os.path.exists(DATA_DIR)):
        return True
    if (not os.path.exists(SQLITE_DB)):
        return True
    return False

class Sport(object):
    pass

class Activity(object):
    pass

class Lap(object):
    pass

def initialize_granola():
    """
    Create the data directory, database, config files, and anything else
    required on the first run of the software.
    """
    log.info("Creating %s" % DATA_DIR)
    try:
        os.mkdir(DATA_DIR)
    except OSError:
        pass

    log.info("Creating and populating granola database")
    db_str = "sqlite:///%s" % SQLITE_DB
    db = create_engine(db_str, echo=True)
    metadata = MetaData(db)
    sport_table = Table('sport', metadata,
            Column('id', Integer, primary_key=True),
            Column('name', String(40)),
    )

    activity_table = Table('activity', metadata,
            Column('id', Integer, primary_key=True),
            Column('date_id', String(30)), # may not be needed
            Column('sport_id', Integer, ForeignKey('sport.id')),
    )
    mapper(Activity, activity_table, properties={
        'sport': relation(Sport)})
    mapper(Sport, sport_table)

    metadata.create_all()

if __name__ == "__main__":
    log.info("Starting granola %s." % VERSION)

    if is_first_run():
        initialize_granola()

    #users = Table('users', metadata, autoload=True)
    #emails = Table('emails', metadata, autoload=True)
    #session = create_session()
